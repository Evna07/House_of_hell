//Losowanie statystyk
let stat = function (min, max, zmien){
  min = Math.ceil(min);
  max = Math.floor(max);
  return Math.floor(Math.random() * (max - min)) + min + zmien;
};

//Zręczność
let zrc = stat(1,6,6);
console.log("Twoja zręczność: ", zrc);
const bzrc = document.querySelector("#bzrc");
const zrecznosc = document.querySelector("#zrecznosc");
bzrc.addEventListener("click", function(){
  zrecznosc.innerHTML = '<h3>' + zrc + '</h3>';
}, {once : true})

//Wytrzymałość
let wyt = stat(2,12,12);
console.log("Twoja wytrzymałość: ", wyt);
const bwyt = document.querySelector("#bwyt");
const wytrzymalosc = document.querySelector("#wytrzymalosc");
bwyt.addEventListener("click", function(){
  wytrzymalosc.innerHTML = '<h3>' + wyt + '</h3>';
}, {once : true})

//Szczęście - NAJPRAWDOPODOBNIEJ ZOSTANIE USUNIĘTE
let szc = stat(1,6,6);
console.log("Twoje szczęście: ", szc);
const bszc = document.querySelector("#bszc");
const szczescie = document.querySelector("#szczescie");
bszc.addEventListener("click", function() {
  szczescie.innerHTML = '<h3>' + szc + '</h3>';
}, {once : true});

